{
  "name": "TME 310 - Jupyter",
  // Use prebuilt image from GitHub Container Registry for fast startup
  // To rebuild: push changes to main branch or manually trigger workflow
  "image": "ghcr.io/uwt-tme-310/tme_310_hwxx_template:latest",

  // Fallback: uncomment to build locally during development
  // "build": {
  //   "dockerfile": "Dockerfile",
  //   "context": ".."
  // },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "GitHub.copilot",
        "ms-toolsai.datawrangler",
        "quarto.quarto"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "jupyter.askForKernelRestart": false,
        "jupyter.interactiveWindow.collapseCellInputCode": "firstLine",
        "files.exclude": {
          ".*": true,
          "test_*": true,
          "pytest.ini": true,
          "conftest.py": true
        },
        "workbench.sideBar.location": "left",
        "workbench.activityBar.location": "top",
        "workbench.secondarySideBar.defaultVisibility": "visible",
        "github.copilot.enable": {
          "*": false,
          "plaintext": false,
          "markdown": false
        },
        "extensions.ignoreRecommendations": true
      }
    }
  }
}